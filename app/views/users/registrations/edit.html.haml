= form_for(@user, url: user_registration_path, method: :put) do |f|
  %fieldset
    %legend Edit user
    = f.label :username
    = f.text_field :username, placeholder: 'Username'
    = f.label :email
    = f.email_field :email, placeholder: 'Email'
    = f.label :password
    = f.password_field :password, placeholder: 'Password'
    %span.help-inline (leave blank if you don't want to change it)
    = f.label :password_confirmation
    = f.password_field :password_confirmation, placeholder: 'Password Confirmation'
    = f.label :current_password
    = f.password_field :current_password, placeholder: 'Current Password'
    .form-actions
      = f.submit 'Update', class: 'btn btn-primary'
      = link_to 'Cancel', :back, class: 'btn'
  = render partial: 'users/shared/links'
