= form_for('user', url: user_sessions_path, html: {class: 'form-stacked'}) do |f|
  %fieldset
    %legend Sign in
    .clearfix
      = f.label :username
      .input
        = f.text_field :username, placeholder: 'Username'
    .clearfix
      = f.label :password
      .input
        = f.password_field :password, placeholder: 'Password'
    .clearfix
      %label
        = f.check_box :remember_me
        %span Remember me
    = f.submit 'Sign In', class: 'btn btn-primary'
  %ul.unstyled
    %li= link_to('Forgot your password?', new_password_reset_path)