= form_for(Album.new) do |f|
  %fieldset
    %legend New Album
    .clearfix
      = f.label :title
      .input
        = f.text_field :title
    .clearfix
      = f.label :description
      .input
        = f.text_field :description
    .clearfix
      = f.label :private
      .input
        = f.check_box :private
    .actions
      = f.submit 'Save', class: 'btn btn-primary'
